{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "es6",
        "target": "es5",
        "baseUrl": "./src",
        "importHelpers": true,
        "noUnusedLocals": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "lib": ["dom", "es2017"],
        "moduleResolution": "node",
        "paths": {
            "src/*": ["*"],
            "@api/*": ["api/*"],
            "@icons/*": ["assets/icons/*"],
            "@images/*": ["assets/images/*"],
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@types/*": ["types/*"],
            "@store/*": ["store/*"],
            "@webpack/*": ["config/webpack/*"]
        },
        "typeRoots": ["src/types/**/*.d.ts", "node_modules/@types"]
    },
    "include": ["src", "./node_modules/@types"],
    "exclude": ["node_modules", "**/*.js", "**/*.spec.ts", "**/*.spec.tsx"]
}
